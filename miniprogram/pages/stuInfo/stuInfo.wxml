<view class="Container">
    <form class="stu_info" bindsubmit="infoSubmit">
        <view class="item">
            <text class="form_text">学号:</text>
            <input class="form_input" name="stu_number" value="{{stu_number}}"/>   
        </view>
        
        <view class="item">
            <text class="form_text">邮箱:</text>
            <input class="form_input" name="post_address" value="{{post_address}}"/>
        </view>

        <view class="item">
            <text class="form_text">手机号码:</text>
            <input class="form_input" name="phone_number" value="{{phone_number}}"/>
        </view>
        <view class="item">
            <button class="button" type="primary" form-type="submit">提交</button>
        </view>

    </form>
</view>