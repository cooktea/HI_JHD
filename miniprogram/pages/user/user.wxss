/* pages/user/user.wxss */
.userinfo{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.user_avatar{
    width: 168rpx;
    height: 168rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.user_nick{
    height: 100rpx;
    color: #aaa;
}

.item_list{
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}

.item{
    margin-left: 10%;
    margin-right: 10%;
    margin-top: 30rpx;
    width: 600rpx;
    border-bottom-style: ridge;
    border-width: 4rpx;
    border-color: rgb(36, 33, 29);
}

.item_text{
    color: #222;
    font-family: 'Courier New', Courier, monospace;
    font-style: normal;
    font-size: 55rpx;
}