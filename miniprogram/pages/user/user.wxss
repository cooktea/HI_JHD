/* pages/user/user.wxss */.userinfo{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.user_avatar{
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.user_nick{
    height: 100rpx;
    color: #aaa;
}

.item_list{
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}

.item{
    margin-left: 10%;
    margin-top: 30rpx;
}

.item_text{
    color: #222;
    font-family: 'Courier New', Courier, monospace;
    font-style: normal;
    font-size: 55rpx;
}