.container{
    display: flex;
}

.item_list{
    display: flex;
    flex-direction: column;
}

.item{
    display: flex;
}

.find_card{
    width: 750rpx;
    height: 100rpx;
    background-color: antiquewhite;
    display: flex;
    flex-direction: row;
    text-align: center;
    align-items: center;
    margin-left: 5%;
    margin-right: 5%;
}

.find_card_item{
    width: 50%;
    color: black;
}

.info_camera{
    display: flex;
    flex-direction: column;
    align-items: center;

}

.button{
    width: 40%;
    margin-left: 5%;
    margin-right: 5%;
}

.info_item{
    display: flex;
    flex-direction: row;
    margin-top: 20rpx;
    /* text-align: center; */
}

.info_item_button{
    display: flex;
    flex-direction: column;
    align-self: center;
    background-color: blue
}

.info_text{
    width: 200rpx;
    text-align: center;
}

.get_card{
    margin:10rpx;
    width: 700rpx;
    height: 700rpx;
    display: flex;
    flex-direction: column;
    border-bottom-style: solid;  
    border-bottom-color:black;
    border-top-style: solid;  
    border-top-color:black;
}

.lost_card{
    margin:10rpx;
    width: 700rpx;
    height: 300rpx;
    display: flex;
    flex-direction: column;
    border-bottom-style: solid;  
    border-bottom-color:black;
    border-top-style: solid;  
    border-top-color:black;
}